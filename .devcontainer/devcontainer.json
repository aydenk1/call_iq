{
  "name": "call-iq",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "call_iq",
  "runServices": ["call_iq"],
  "forwardPorts": [3000],
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance", "ms-python.debugpy", "openai.chatgpt"],
      "settings": {
        "python.analysis.extraPaths": ["${workspaceFolder}/src"],
        "python.analysis.exclude": ["**/data/**"],
        "files.watcherExclude": {
          "**/data/**": true
        },
        "search.exclude": {
          "**/data/**": true
        }
      }
    }
  },
  "mounts": [
    "source=vscode-server,target=/root/.vscode-server,type=volume"
  ]
}
